	port = $1800
	db   = $14

	*=$0680

	jmp init	; init
	jmp chkerr	; trap error
	jmp noerr	; no error

	sta db		; store data byte
	ldx #$04	; loop count (2 bit per loop)
s0	lda #$04	; ATN ack = 1
	lsr db		; LSB into carry
	rol
	asl
	sta port	; ATN ack=1, DATA=x, CLK=0
s1	lda port
	bmi s1		; wait for ATN=0
	lda #$02	; CLK = 1
	lsr db
	rol
	asl
	sta port	; ATN ack=0, DATA=x, CLK=1A
s2	lda port
	bpl s2		; wait for ATN=1
	dex
	bne s0
clk1	lda #$08
	sta $1800
	rts

init	lda #$04	; init
i0	bit port
	bne i0
	asl
	sta port
i1	lda port
	bpl i1
	rts

chkerr  lda port
	bmi *-3
	rts

noerr	lda #$02
	sta port
	jsr i1
	lda #$18
	sta port
	lda #$01
	bit port
	bne *-3
	rts
